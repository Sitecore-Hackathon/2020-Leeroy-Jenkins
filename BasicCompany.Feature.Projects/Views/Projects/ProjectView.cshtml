@using System.Web.Mvc.Html
@model BasicCompany.Feature.Projects.Models.ProjectModel

@using (Html.BeginRouteForm(Sitecore.Mvc.Configuration.MvcSettings.SitecoreRouteName, FormMethod.Post))
{
    <div class="container main-container">
        <div class="row mb-5 d-flex justify-content-center">
            <div class="card border-light col-4 my-4 mx-4">
                <div class="card-header">
                    <h4 class="card-title">@Model.ModuleTitle</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.ModuleDescription</p>
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <p class="card-text"><strong>Web Server OS:</strong> @Model.WebServerOs</p>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <p class="card-text"><strong>Sitecore Product: </strong> @Model.SitecoreProduct</p>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center bg-primary">
                            <p class='card-text text-white'>
                                <strong>Price:</strong>
                                $@Model.Price
                            </p>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <p class="card-text"><strong>Participants: </strong> @Model.Participants</p>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <button type="submit" class="btn btn-danger">Join</button>
                        </li>
                    </ul>
                </div>
            </div>
        </div><!--row-->
    </div>
}